<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">

        <title>{% block title %}Symfony.si - Slovenian Symfony User Group{% endblock %}</title>

        <!-- Bootstrap core CSS -->
        <link href="{{ asset('bootstrap/css/bootstrap.css') }}" rel="stylesheet">

        <!-- Font Awesome - iconic font and toolkit -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

        <!-- Custom styles for this template -->
        <link href="{{ asset('css/site.css') }}" rel="stylesheet">

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="/assets/js/html5shiv.js"></script>
            <script src="/assets/js/respond.min.js"></script>
        <![endif]-->

        {% block stylesheets %}{% endblock %}
        <script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js?skin=desert"></script>
    </head>
    <body>
        {{ include('google.html.twig') }}

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('symfony_si_main_homepage') }}">Symfony.si</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li {% if app.request.get('_route') == 'symfony_si_main_homepage' %} class="active"{% endif %}>
                            <a href="{{ path('symfony_si_main_homepage', {'_locale': app.request.locale}) }}">{% trans %}Home{% endtrans %}</a>
                        </li>
                        <li {% if app.request.get('_route') == 'symfony_si_main_join' %} class="active"{% endif %}>
                            <a href="{{ path('symfony_si_main_join', {'_locale': app.request.locale}) }}">{% trans %}Join us{% endtrans %}</a>
                        </li>
                        <li {% if app.request.get('_route')|slice(0,15) == 'symfony_si_blog' %} class="active"{% endif %}>
                            <a href="{{ path('symfony_si_blog_homepage', {'_locale': app.request.locale}) }}">Blog</a>
                        </li>
                        <li {% if app.request.get('_route')|slice(0,15) == 'symfony_si_docs' %} class="active"{% endif %}>
                            <a href="{{ path('symfony_si_docs_homepage', {'_locale': app.request.locale}) }}">{% trans %}Documentation{% endtrans %}</a>
                        </li>
                        <li {% if app.request.get('_route')|slice(0,15) == 'symfony_si_ecosystem' %} class="active"{% endif %}>
                            <a href="{{ path('symfony_si_ecosystem_homepage', {'_locale': app.request.locale}) }}">{% trans %}Ecosystem{% endtrans %}</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li{% if app.request.locale == 'sl' %} class="active"{% endif %}><a href="{{ path('symfony_si_main_homepage', {'_locale': 'sl'}) }}">Slovenian</a></li>
                        <li{% if app.request.locale == 'en'%} class="active"{% endif %}><a href="{{ path('symfony_si_main_homepage', {'_locale': 'en'}) }}">English</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            <div class="headerImage"></div>
            <div class="starter-template">
                <div class="row">
                <div class="col-md-9">{% block body %}{% endblock %}</div>
                    <div class="col-md-3">
                        <div class="sidebar">
                            <h2>SensioLabs Connect Club:</h2>
                            <p><a href="https://connect.sensiolabs.com/club/slovenia" class="btn btn-lg btn-success btn-block">{% trans %}Join us{% endtrans %}</a></p>
                            {% block sidebar %}{% endblock %}
                            <a class="twitter-timeline" href="https://twitter.com/symfonysi" data-widget-id="565644083893661696">Tweets by @symfonysi</a>
                            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container -->

        <div id="footer">
            <div class="container">
                <p class="text-muted credit">
                    <a href="{{ path('symfony_si_main_copyright') }}">Symfony.si - Symfony Slovenia</a> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                    <a href="http://symfony.com" target="_blank">{% trans %}Symfony.com official page{% endtrans %}</a> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                    <a href="{{ path('symfony_si_main_contact', {'_locale': app.request.locale}) }}">{% trans %}Contact us{% endtrans %}</a> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                    <a href="{{ path('symfony_si_main_links', {'_locale': app.request.locale}) }}">{% trans %}Useful links{% endtrans %}</a> &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
                    <a href="{{ path('symfony_si_main_contributors') }}">{% trans %}Contributors{% endtrans %}</a>
                </p>
            </div>
        </div>

        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
