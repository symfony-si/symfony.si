<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Symfony and PHP local user group">
        <meta name="author" content="Symfony Slovenia">
        <meta property="og:title" content="Symfony and PHP local user group">
        <meta property="og:type" content="article">
        <meta property="og:url" content="https://symfony.si">
        <meta property="og:image" content="https://symfony.si/images/header.png">
        <meta property="og:description" content="Symfony and PHP local user group">
        <meta property="og:site_name" content="Symfony Slovenia">

        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">

        <title>{% block title %}Symfony.si - Slovenian Symfony User Group{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        {% if (app.environment == 'prod') %}
        {{ include('includes/google.html.twig') }}
        {% endif %}

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}" title="Symfony.si"><img src="{{ asset('images/logo.png') }}" alt="Symfony.si"></a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li {% if app.request.get('_route')|slice(0,15) == 'blog' %} class="active"{% endif %}>
                            <a href="{{ path('blog_homepage') }}">Blog</a>
                        </li>
                        <li {% if app.request.get('_route') == 'resources' %} class="active"{% endif %}>
                            <a href="{{ path('resources') }}">Resources</a>
                        </li>
                        <li {% if app.request.get('_route') == 'cheatsheet' %} class="active"{% endif %}>
                            <a href="{{ path('cheatsheet') }}">Cheat sheet</a>
                        </li>
                    </ul>
                    <form class="navbar-form navbar-right">
                        <a href="https://connect.sensiolabs.com/club/slovenia" class="btn btn-lg btn-success btn-block">Join us</a>
                    </form>
                </div>
            </div>
        </nav>

        <div class="container">
            <div class="headerImage"></div>
            <div class="starter-template">
                <div class="row">
                <div class="col-md-9">{% block body %}{% endblock %}</div>
                    <div class="col-md-3">
                        <div class="sidebar">
                            {% block sidebar %}
                                <a class="twitter-timeline" href="https://twitter.com/symfonysi" data-widget-id="565644083893661696" data-tweet-limit="5" data-chrome="nofooter transparent noborders" width="300">Tweets by @symfonysi</a>
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container -->

        <div id="footer" class="text-muted credit">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <h1><small>About</small></h1>
                        <ul>
                            <li><a href="{{ path('copyrights') }}">Symfony.si - Symfony Slovenia</a></li>
                            <li><a href="{{ path('contact') }}">Contact us</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h1><small>SI resources</small></h1>
                        <ul>
                            <li><a href="{{ path('ecosystem') }}">SI ecosystem</a></li>
                            <li><a href="{{ path('psr_index') }}">PHP Standards Recommendations</a></li>
                            <li><a href="http://sl.phptherightway.com">PHP: The Right Way</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h1><small>Get involved</small></h1>
                        <ul>
                            <li><a href="{{ path('join') }}">Join us</a></li>
                            <li><a href="{{ path('contributors') }}">Contributors</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h1><small>Built with <i style="color:red;" class="fa fa-heart fa-lg"></i></small></h1>
                        Powered by <a href="https://symfony.com"><img src="{{ asset('images/symfonyLogo.png') }}"></a>
                    </div>
                </div>
            </div>
        </div>

        {% block javascripts %}
            <script>
                window.twttr = (function(d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0],
                            t = window.twttr || {};
                    if (d.getElementById(id)) return t;
                    js = d.createElement(s);
                    js.id = id;
                    js.src = "https://platform.twitter.com/widgets.js";
                    fjs.parentNode.insertBefore(js, fjs);

                    t._e = [];
                    t.ready = function(f) {
                        t._e.push(f);
                    };

                    return t;
                }(document, "script", "twitter-wjs"));
            </script>

            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
